<!--
@version 3.2.0.1
-->
<Skin>


	<!-- 파일 선택 페이지 -->
	<Box id="fileFindView"
		 direction="vertical"
		 width="100%"
		 height="100%"
		 verticalGap="0"
		 paddingTop="10"
		 paddingRight="10"
		 paddingBottom="10"
		 paddingLeft="10">
		<!-- 타이틀 -->
		<Canvas backgroundColor="#c4dff1"
				width="100%"
				height="50">
			<Image source="assets/kspo/bg_header.gif" />
			<Box direction="horizontal"
				 verticalAlign="middle"
				 width="100%"
				 height="50"
				 paddingLeft="12">
				<Image source="assets/kspo/bu_03.gif" />
				<Label text="동영상 업로드"
					   fontSize="14"
					   fontWeight="bold"
					   color="#FFFFFF" />
			</Box>
			<Box direction="horizontal"
				 verticalAlign="middle"
				 horizontalAlign="right"
				 width="100%"
				 height="50"
				 paddingRight="12"
				 horizontalScrollPolicy="off">
				<Button upSkin="assets/kspo/btn_pop_close.gif"
						click="CLOSE" />
			</Box>
		</Canvas>
		<!-- 타이틀 메시지 -->
		<Box direction="horizontal"
			 verticalAlign="middle"
			 width="100%"
			 height="30">
			<Image source="assets/kspo/bul_03.gif" />
			<Label width="100%"
				   text="등록하실 동영상파일을 선택해 주세요"
				   fontWeight="bold" />
		</Box>

		<!-- 메인박스 -->
		<Box direction="vertical"
			 verticalAlign="middle"
			 horizontalAlign="center"
			 width="100%"
			 height="78"
			 borderColor="#dddddd"
			 borderStyle="solid"
			 backgroundColor="#fcfcfc"
			 verticalGap="0"
			 paddingLeft="20"
			 paddingRight="20">
			<Box direction="horizontal"
				 verticalAlign="middle"
				 horizontalGap="3"
				 width="296">
				<Label width="253"
					   text="{fileName}"
					   borderColor="#CCCCCC"
					   borderStyle="solid"
					   truncateToFit="true"
					   backgroundColor="#FFFFFF" />
				<Button upSkin="assets/kspo/btn_find.gif"
						click="FILE_FIND" />
			</Box>
			<Box direction="horizontal"
				 verticalAlign="middle"
				 horizontalGap="3"
				 width="296">
				<Label width="253"
					   textAlign="right">
					<![CDATA[<b>{fileSize_formatter}</b>/{maxFileSize_formatter}]]>
				</Label>
			</Box>
		</Box>

		<Label paddingTop="10"
			   paddingBottom="5"
			   width="100%"
			   text="- 동영상 지원포맷 : mpeg, wmv, avi, asf, mp4, mov, rm, flv" />

		<!-- 네비게이션 버튼 -->
		<Box borderThickness="3"
			 borderColor="#f2f2f2"
			 borderStyle="solid"
			 width="100%"
			 paddingTop="10"
			 paddingRight="10"
			 paddingBottom="10"
			 paddingLeft="10">
			<Text width="100%"
				  wordWrap="true"
				  leading="5">
				<![CDATA[음란, 저작권  침해, 명예훼손, 청소년유해물, 기타 위법자료 등을 게시 또는 배포하면 해당 게시물은 경고없이 삭제되며, 게시파는 법률에 따라 징역형 또는 벌금형에 처해질 수 있습니다.]]>
			</Text>
		</Box>
		<Box horizontalAlign="center"
			 width="100%"
			 paddingTop="18">
			<Button upSkin="assets/kspo/btn_next2.gif"
					click="FILE_UPLOAD" />
		</Box>
	</Box>

	<!-- 썸네일 페이지 -->
	<Box id="thumbnailView"
		 direction="vertical"
		 width="100%"
		 height="100%"
		 verticalGap="0"
		 paddingTop="10"
		 paddingRight="10"
		 paddingBottom="10"
		 paddingLeft="10">
		<!-- 타이틀 -->
		<Canvas backgroundColor="#c4dff1"
				width="100%"
				height="50">
			<Image source="assets/kspo/bg_header.gif" />
			<Box direction="horizontal"
				 verticalAlign="middle"
				 width="100%"
				 height="50"
				 paddingLeft="12">
				<Image source="assets/kspo/bu_03.gif" />
				<Label text="동영상 업로드"
					   fontSize="14"
					   fontWeight="bold"
					   color="#FFFFFF" />
			</Box>
			<Box direction="horizontal"
				 verticalAlign="middle"
				 horizontalAlign="right"
				 width="100%"
				 height="50"
				 paddingRight="12"
				 horizontalScrollPolicy="off">
				<Button upSkin="assets/kspo/btn_pop_close.gif"
						click="CLOSE" />
			</Box>
		</Canvas>
		<!-- 타이틀 메시지 -->
		<Box direction="horizontal"
			 verticalAlign="middle"
			 width="100%"
			 height="30">
			<Image source="assets/kspo/bul_03.gif" />
			<Label width="100%"
				   text="등록 하실 대표 이미지를 선택해주세요"
				   fontWeight="bold" />
		</Box>

		<!-- 메인박스 -->
		<Box horizontalAlign="center"
			 width="100%"
			 height="170"
			 verticalScrollPolicy="off">

			<Thumbnails thumbWidth="100"
						thumbHeight="75"
						thumbSpace="10"
						itemSpace="20"
						columnCount="3"
						rollOverColor="#ffa200"
						rollOutColor="#DDDDDD"
						selectionColor="#FF0000" />
		</Box>

		<Box direction="horizontal"
			 horizontalAlign="center"
			 width="100%"
			 paddingTop="38">
			<Button upSkin="assets/kspo/btn_extract.gif"
					click="RETRY" />
			<Button upSkin="assets/kspo/btn_cancel.gif"
					click="CANCEL" />
			<Button upSkin="assets/kspo/btn_next2.gif"
					click="COMPLETE" />
		</Box>
	</Box>

	<!-- 프로그레스바 -->
	<Box id="progressView"
		 direction="vertical"
		 width="100%"
		 height="100%"
		 verticalGap="0"
		 paddingTop="10"
		 paddingRight="10"
		 paddingBottom="10"
		 paddingLeft="10">
		<!-- 타이틀 -->
		<Canvas backgroundColor="#c4dff1"
				width="100%"
				height="50">
			<Image source="assets/kspo/bg_header.gif" />
			<Box direction="horizontal"
				 verticalAlign="middle"
				 width="100%"
				 height="50"
				 paddingLeft="12">
				<Image source="assets/kspo/bu_03.gif" />
				<Label text="동영상 업로드"
					   fontSize="14"
					   fontWeight="bold"
					   color="#FFFFFF" />
			</Box>
			<Box direction="horizontal"
				 verticalAlign="middle"
				 horizontalAlign="right"
				 width="100%"
				 height="50"
				 paddingRight="12"
				 horizontalScrollPolicy="off">
				<Button upSkin="assets/kspo/btn_pop_close.gif"
						click="CLOSE" />
			</Box>
		</Canvas>
		<!-- 타이틀 메시지 -->
		<Box direction="horizontal"
			 verticalAlign="middle"
			 width="100%"
			 height="30">
			<Image source="assets/kspo/bul_03.gif" />
			<Label width="100%"
				   text="{progressMessage} ({persentage}%)"
				   fontWeight="bold" />
		</Box>


		<!-- 메인박스 -->
		<Box direction="vertical"
			 verticalAlign="middle"
			 horizontalAlign="center"
			 width="100%"
			 height="78"
			 borderColor="#dddddd"
			 borderStyle="solid"
			 backgroundColor="#fcfcfc"
			 verticalGap="0"
			 paddingLeft="20"
			 paddingRight="20">

			<Box width="302"
				 height="22"
				 borderColor="#dddddd"
				 borderStyle="solid">
				<ProgressBar label="%3%%"
							 barImage="assets/kspo/loadingbar.gif"
							 trackImage="assets/kspo/loadingbar2.gif" />
			</Box>
			<Box direction="horizontal"
				 verticalAlign="middle"
				 width="100%"
				 height="30">
				<Label width="100%"
					   text="{bytesPerSec}" />
				<Label width="100%"
					   textAlign="right"
					   text="{remainingTime}" />
			</Box>
		</Box>
		<Box horizontalAlign="center"
			 width="100%"
			 paddingTop="128">
			<Button upSkin="assets/kspo/btn_cancel.gif"
					click="CANCEL" />
		</Box>
	</Box>




	<!-- 완료 -->
	<Box id="completeView"
		 direction="vertical"
		 width="100%"
		 height="100%"
		 verticalGap="0"
		 paddingTop="10"
		 paddingRight="10"
		 paddingBottom="10"
		 paddingLeft="10">
		<!-- 타이틀 -->
		<Canvas backgroundColor="#c4dff1"
				width="100%"
				height="50">
			<Image source="assets/kspo/bg_header.gif" />
			<Box direction="horizontal"
				 verticalAlign="middle"
				 width="100%"
				 height="50"
				 paddingLeft="12">
				<Image source="assets/kspo/bu_03.gif" />
				<Label text="동영상 업로드"
					   fontSize="14"
					   fontWeight="bold"
					   color="#FFFFFF" />
			</Box>
			<Box direction="horizontal"
				 verticalAlign="middle"
				 horizontalAlign="right"
				 width="100%"
				 height="50"
				 paddingRight="12"
				 horizontalScrollPolicy="off">
				<Button upSkin="assets/kspo/btn_pop_close.gif"
						click="CLOSE" />
			</Box>
		</Canvas>
		<!-- 타이틀 메시지 -->
		<Box direction="horizontal"
			 verticalAlign="middle"
			 width="100%"
			 height="30">
			<Image source="assets/kspo/bul_03.gif" />
			<Label width="100%"
				   text="동영상 변환 준비 중입니다.  잠시만 기다려 주세요"
				   fontWeight="bold" />
		</Box>
	</Box>
	<Style>
	</Style>

</Skin>
