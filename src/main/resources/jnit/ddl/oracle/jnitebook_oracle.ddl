/**********************************/
/* Table Name: EBOOK 테이블 */
/**********************************/
CREATE TABLE JNITEBOOK(
		EBOOK_ID                      		VARCHAR2(50)		 NOT NULL,
		EBOOK_TITLE                   		VARCHAR2(255)		 NULL ,
		CREATED                       		DATE		 NULL ,
		MODIFIED                      		DATE		 NULL ,
		PAGE_WIDTH                    		NUMBER(38)		 NULL ,
		PAGE_HEIGHT                   		NUMBER(38)		 NULL ,
		THUMB_YN                      		VARCHAR2(15)		 NULL ,
		THUMB_AOTO_HIDE               		NUMBER(38)		 NULL ,
		THUMB_WIDTH                   		NUMBER(38)		 NULL ,
		THUMB_HEIGHT                  		NUMBER(38)		 NULL ,
		SHARE_LINK                    		VARCHAR2(255)		 NULL ,
		SHARE_TEXT                    		VARCHAR2(255)		 NULL ,
		SHARE_VIA                     		VARCHAR2(255)		 NULL ,
		ISDEL                         		NUMBER(1)		 DEFAULT 0		 NULL ,
		EXT01                         		VARCHAR2(255)		 NULL ,
		EXT02                         		NUMBER(1)		 NULL ,
		EXT03                         		VARCHAR2(255)		 NULL ,
		EXT04                         		VARCHAR2(255)		 NULL ,
		EXT05                         		VARCHAR2(255)		 NULL 
);

COMMENT ON TABLE JNITEBOOK is 'EBOOK 테이블';
COMMENT ON COLUMN JNITEBOOK.EBOOK_ID is '고유번호';
